{
    "name"                  : "larawise/larawise",
    "type"                  : "package",
    "description"           : "Larawise – The most powerful, elegant, and productive way to develop your next Laravel application.",
    "keywords"              : [],
    "license"               : "MIT",
    "homepage"              : "https://larawise.com/",

    "authors"               : [{
        "name"            : "Selçuk Çukur",
        "email"           : "hk@selcukcukur.com.tr",
        "homepage"        : "https://selcukcukur.com.tr"
    }],

    "support"               : {
        "source"          : "https://github.com/larawise/larawise",
        "issues"          : "https://github.com/larawise/larawise/issues",
        "docs"            : "https://docs.larawise.com"
    },

    "require"               : {
        "php"                               : "^8.2|^8.3|^8.4",
        "larawise/packagify"                : "dev-main"
    },

    "autoload"              : {
        "psr-4"     : {
            "Larawise\\"                    : "./src"
        }
    },
    "autoload-dev"          : {
        "psr-4"     : {
            "Larawise\\Tests\\"             : "./tests"
        }
    },

    "extra"                 : {
        "laravel"   : {
            "providers"     : ["Larawise\\LarawiseProvider"],
            "aliases"       : { "Larawise": "Larawise\\Facades\\Larawise" }
        }
    },

    "config"                : {
        "optimize-autoloader"   : true,
        "preferred-install"     : "dist",
        "sort-packages"         : true,
        "allow-plugins"         : {}
    },

    "minimum-stability"     : "dev",
    "prefer-stable"         : true
}
